@model AnimalDetailsViewModel
@{
    ViewData["Title"] = "AnimalDetails";
}

@if (Model.Id == 0)
{
    <div class="text-center alert-info">
        <h1>There are no animals available.</h1>
    </div>
}
else
{
    <div class="text-center text-success">
        <h1>Detail information about <b>@Model.AnimalName</b></h1>
    </div>
    <table class="table table-hover" style="margin-top: 40px; font-size: 20px;">
        <thead>
            <tr>
                <th scope="col">Definition</th>
                <th scope="col">Information</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">Name</th>
                <td>@Model.AnimalName</td>
            </tr>
            <tr>
                <th scope="row">Age</th>
                <td>@Model.AnimalAge</td>
            </tr>
            <tr>
                <th scope="row">Birthday date</th>
                <td>@Model.AnimalBirthday.ToString("yyyy-MM-dd")</td>
            </tr>
            <tr>
                <th scope="row">Male/Female</th>
                <td>@Model.AnimalSex</td>
            </tr>
            <tr>
                <th scope="row">Growth</th>
                <td>@Model.AnimalGrowth</td>
            </tr>
            <tr>
                <th scope="row">Growth</th>
                <td>@Model.AnimalWeight</td>
            </tr>
            <tr>
                <th scope="row">Employee Name</th>
                <td>@Model._Employee.FullName</td>
            </tr>
            <tr>
                <th scope="row">Animal type</th>
                <td>@Model._AnimalType.TypeName</td>
            </tr>
            <tr>
                <th scope="row">Aviary</th>
                <td>@Model._Aviary.AviaryName</td>
            </tr>
            <tr>
                <th scope="row">Zoo name</th>
                <td>@Model._Zoo.Name</td>
            </tr>
        </tbody>
    </table>

}
