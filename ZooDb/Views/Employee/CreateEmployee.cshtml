@model Employee
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

@{
    ViewData["Title"] = "CreateEmployee";
}

@if (SignInManager.IsSignedIn(User))
{
    <h2>Create New Employee</h2>
    <button type="submit" class="btn btn-default" style="margin-bottom: 20px;">
        @Html.ActionLink("Show All Employees", "AllEmployees", "Employee")
    </button>


    @using (Html.BeginForm("EmployeeCreated", "Employee", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(n => n.ZooId)
            @Html.DropDownListFor(n => n.ZooId, new SelectList(ViewBag.Zoos, "Id", "Name"), "Select a zoo", new { @class = "form-control" })
            @Html.ValidationMessageFor(n => n.ZooId, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(n => n.FullName)
            @Html.TextBoxFor(n => n.FullName, new { @class = "form-control" })
            @Html.ValidationMessageFor(n => n.FullName, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(n => n.MaleFemale)
            @Html.TextBoxFor(n => n.MaleFemale, new { @class = "form-control" })
            @Html.ValidationMessageFor(n => n.MaleFemale, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(n => n.Age)
            @Html.TextBoxFor(e => e.Age, new { @class = "form-control" })
            @Html.ValidationMessageFor(n => n.Age, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(n => n.Experience)
            @Html.TextBoxFor(a => a.Experience, new { @class = "form-control" })
            @Html.ValidationMessageFor(n => n.Experience, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(n => n.PhoneNumber)
            @Html.TextBoxFor(a => a.PhoneNumber, new { @class = "form-control" })
            @Html.ValidationMessageFor(n => n.PhoneNumber, "", new { @class = "text-danger" })
        </div>


        <button type="submit" class="btn btn-success">Create Employee</button>
    }


}
else
{
    <div class="text-center">
        <h1 class="text-danger">Please, Sign in to create new Employee</h1>
    </div>
    <button type="submit" class="btn btn-default">@Html.ActionLink("Log in", "Login", "Account")</button>
}
