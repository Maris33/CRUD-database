@model EmployeeViewModel


<div class="text-center">
    <h2 class="text-danger">You are about to delete an Employee: @Model.FullName</h2>
    <h3>Are you sure?</h3>
</div>
@Html.ActionLink("Cancel", "AllEmployees", "Employee", null, new { @class = "btn btn-default" })
@Html.ActionLink("Yes, sure!", "EmployeeDeleted", "Employee", new { @id = Model.Id }, new { @class = "btn btn-danger" })

